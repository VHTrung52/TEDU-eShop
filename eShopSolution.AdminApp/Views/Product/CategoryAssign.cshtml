@model eShopSolution.ViewModels.Catalog.Products.CategoryAssignRequest

@{
    ViewData["Title"] = "Gán danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Gán quyền</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xoá người dùng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về danh sách</a>
        </div>

        <div class="card-body">
            <form asp-action="CategoryAssign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ProductId" type="hidden" />
                @for (var i = 0; i < Model.Categories.Count; i++)
                {
                    <div class="form-group">
                        <label>
                            @Model.Categories[i].Name
                            <input asp-for="Categories[i].IsSelected" type="checkbox" />
                            <input asp-for="Categories[i].Id" type="hidden" />       
                            <input asp-for="Categories[i].Name" type="hidden" />   
                        </label>                      
                    </div>
                }
                <div class="form-group">
                    <input type="submit" value="Lưu lại" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
